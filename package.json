{
  "name": "hook-hoc",
  "version": "1.0.3",
  "description": "Use React hooks with your class components by Higher Order Component",
  "sideEffects": false,
  "main": "dist/index.cjs.js",
  "module": "lib/index.js",
  "unpkg": "dist/index.umd.min.js",
  "types": "lib/index.d.ts",
  "files": [
    "dist",
    "lib",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build:lib": "cross-env NODE_ENV=production babel src --out-dir lib --source-maps inline --extensions '.ts,.tsx,.js' --ignore '**/__tests__/**' --ignore '**/*.d.ts'",
    "build:types": "tsc --emitDeclarationOnly -p ./src",
    "build:bundle": "rollup -c",
    "build:clean": "rimraf lib",
    "build": "npm run build:lib && npm run build:types",
    "dev": "yarn run build:lib -w",
    "prepare": "npm run build:clean && npm run build",
    "prepublishOnly": "npm run build:bundle",
    "lint": "eslint --ext .ts,.tsx",
    "format": "eslint --fix \"src/**/*.{js,ts,tsx}\"",
    "test": "cross-env NODE_ENV=test jest",
    "test:ci": "npm test -- --ci",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "changelog": "npx auto-changelog --stdout",
    "beforeStage": "npx auto-changelog -p && git add CHANGELOG.md"
  },
  "keywords": [
    "react",
    "typescript",
    "hook",
    "class",
    "component",
    "withHook",
    "higher order component",
    "hoc",
    "bridge",
    "adapter"
  ],
  "author": "Nathaniel Tucker <me@ntucker.me> (https://github.com/ntucker)",
  "license": "Apache-2.0",
  "homepage": "https://github.com/ntucker/hook-hoc#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:ntucker/hook-hoc.git"
  },
  "bugs": {
    "url": "https://github.com/ntucker/hook-hoc/issues"
  },
  "auto-changelog": {
    "template": "./scripts/changelog.hbs",
    "breakingPattern": "breaking:",
    "unreleased": true,
    "commitLimit": false,
    "handlebarsSetup": "./scripts/changelogSetup.js"
  },
  "git": {
    "changelog": "npx auto-changelog --stdout"
  },
  "release-it": {
    "github": {
      "release": true
    }
  },
  "devDependencies": {
    "@anansi/babel-preset": "2.1.5",
    "@anansi/eslint-plugin": "^0.8.4",
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^25.1.3",
    "@types/lodash": "^4.14.149",
    "@types/react": "^17.0.0",
    "auto-changelog": "^1.16.2",
    "babel-jest": "^25.1.0",
    "babel-plugin-root-import": "^6.6.0",
    "coveralls": "^3.0.9",
    "cpy-cli": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "ignore-styles": "^5.0.1",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "rollup": "^1.27.14",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-filesize": "^6.2.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.2.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "@types/react": "^16.8.2 || ^17.0.0",
    "react": "^16.8.2 || ^17.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "dependencies": {
    "@types/hoist-non-react-statics": "^3.3.1",
    "hoist-non-react-statics": "^3.3.2"
  },
  "browserslist": [
    "> 1%",
    "Firefox ESR",
    "not dead",
    "not ie<12",
    "not OperaMini all"
  ]
}
